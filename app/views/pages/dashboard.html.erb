<div class="container dashboard">

  <h1>Dashboard</h1>
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-info fa-fw"></i>Info
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
    <%= link_to 'Edit your profile', edit_user_registration_path %>
